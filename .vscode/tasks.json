{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check Make version",
            "type": "shell",
            "command": "make",
            "args": [
                "--version"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build C++ project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make.exe",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
              }
        },
        {
            "label": "Build & run C++ project",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make.exe",
            "args": [
                "run"
            ]
        },
        {
            "label": "Build & test C++ project",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make.exe",
            "args": [
                "test"
            ]
        }
    ]
}